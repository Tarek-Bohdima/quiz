<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.android.quiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/welcome_page_layout"
            layout="@layout/welcome_page" />

        <include
            android:id="@+id/first_question_layout"
            layout="@layout/first_question" />

        <include
            android:id="@+id/second_question_layout"
            layout="@layout/second_question" />

        <include
            android:id="@+id/third_question_layout"
            layout="@layout/third_question" />

        <include
            android:id="@+id/fourth_question_layout"
            layout="@layout/fourth_question" />

        <include
            android:id="@+id/score_share_layout"
            layout="@layout/score_share" />

    </LinearLayout>

</ScrollView>